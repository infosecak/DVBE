{
  "manifest_version": 2,
  "name": "Damn Vulnerable Browser Extension (DVBE)",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "description": "A badly written chrome extension for taking notes.",
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "history",
    "audioCapture",
    "idle",
    "clipboardRead"
  ],
 "web_accessible_resources": [
        "*"]
}
